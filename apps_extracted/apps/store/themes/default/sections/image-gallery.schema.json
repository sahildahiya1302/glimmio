    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          { "type": "image", "id": "image", "label": "Image" },
          { "type": "text", "id": "alt_text", "label": "Alt Text" },
          { "type": "text", "id": "caption", "label": "Caption" }
        ]
      }
    ],
    "max_blocks": 10
