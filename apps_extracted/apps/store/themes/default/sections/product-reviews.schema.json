{
  "name": "Product Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customer Reviews"
    },
    {
      "type": "range",
      "id": "max_reviews",
      "label": "Max Reviews to Display",
      "default": 10,
      "min": 1,
      "max": 50
    },
    {
      "type": "range",
      "id": "min_rating",
      "label": "Minimum Rating",
      "default": 1,
      "min": 1,
      "max": 5
    },
    {
      "type": "select",
      "id": "sort_order",
      "label": "Sort Reviews By",
      "default": "latest",
      "options": [
        {"value": "latest", "label": "Latest"},
        {"value": "rating", "label": "Rating"}
      ]
    },
    {
      "type": "checkbox",
      "id": "show_review_form",
      "label": "Show Review Submission Form",
      "default": true
    }
  ]
}
