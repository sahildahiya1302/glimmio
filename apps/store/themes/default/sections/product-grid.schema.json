{
  "name": "Product Grid",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "Shop Products" },
    {
      "type": "collection_select",
      "id": "collection_id",
      "label": "Collection to Display",
      "default": ""
    },
    {
      "type": "product_set_select",
      "id": "product_set_id",
      "label": "Product Set",
      "default": ""
    },
    {
      "type": "range",
      "id": "max_products",
      "label": "Max Products to Show",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 12
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns on Desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "label": "Columns on Mobile",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_prices",
      "label": "Show Product Prices",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_quick_view",
      "label": "Enable Quick View Button",
      "default": false
    }
    ]
  ,
  "presets": {
    "default": {
      "name": "Product Grid",
      "settings": {
        "heading": "Featured Products",
        "max_products": 8,
        "columns": 4,
        "show_prices": true
      }
    }
  }
}
