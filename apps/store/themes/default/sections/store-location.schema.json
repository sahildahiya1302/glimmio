{
  "name": "Store Location",
  "settings": [
    {
      "type": "text",
      "id": "store_name",
      "label": "Store Name",
      "default": "Our Store"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "123 Market Street\nCity, Country"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": ""
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": ""
    },
    {
      "type": "text",
      "id": "hours",
      "label": "Working Hours",
      "default": "Mon–Fri: 9am–7pm"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "map_height",
      "label": "Map Height (px)",
      "min": 200,
      "max": 600,
      "default": 300
    },
    {
      "type": "textarea",
      "id": "map_embed",
      "label": "Google Maps Embed Code (iframe)",
      "default": "<iframe src=\"https://maps.google.com/...\" width=\"100%\" height=\"300\" style=\"border:0;\" allowfullscreen=\"\" loading=\"lazy\"></iframe>"
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "Location",
      "settings": [
        { "type": "text", "id": "name", "label": "Name" },
        { "type": "textarea", "id": "address", "label": "Address" },
        { "type": "url", "id": "map_link", "label": "Map Link" }
      ]
    }
  ],
  "max_blocks": 3
}
