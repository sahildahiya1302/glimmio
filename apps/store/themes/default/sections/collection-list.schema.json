{
  "name": "Collection List",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "Shop by Collection" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "" },
    { "type": "number", "id": "max_collections", "label": "Max Collections to Show", "default": 6, "min": 1, "max": 20 },
    { "type": "checkbox", "id": "show_description", "label": "Show Collection Description", "default": false },
    { "type": "select", "id": "text_align", "label": "Text Alignment", "default": "center", "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
    ] },
    { "type": "range", "id": "desktop_columns", "label": "Desktop Columns", "min": 2, "max": 6, "default": 4 },
    { "type": "range", "id": "mobile_columns", "label": "Mobile Columns", "min": 1, "max": 3, "default": 2 },
    { "type": "color", "id": "card_bg", "label": "Card Background", "default": "#ffffff" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#000000" }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        { "type": "text", "id": "collection_title", "label": "Title" },
        { "type": "image", "id": "image", "label": "Image" },
        { "type": "url", "id": "link", "label": "Link", "default": "#" }
      ]
    }
  ],
  "max_blocks": 10
}
